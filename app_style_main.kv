<DrawerClickableItem@MDNavigationDrawerItem>
    focus_color: "#e7e4c0"
    text_color: "#4a4939"
    icon_color: "#4a4939"
    selected_color: "#0c6c4d"

MDScreen:

    MDNavigationLayout:

        MDScreenManager:

            MDScreen:
                MDBoxLayout:
                    md_bg_color: "#FFFFFF"
                    orientation: "vertical"

                    MDTopAppBar:
                        title: "QR Reader"
                        elevation: 4
                        pos_hint: {"top": 1}
                        md_bg_color: "#095EB1"
                        specific_text_color: "#FFFFFF"
                        left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]

                    MDTabs:
                        pos_hint: {"top": 2}
                        id: tabs

        MDNavigationDrawer:
            id: nav_drawer
            radius: (0, 16, 16, 0)

            MDNavigationDrawerMenu:

                MDNavigationDrawerHeader:
                    title: "QR Reader"
                    text: "NAET V 0.4"
                    source: "logo.png"
                    title_color: "#FFFFFF"
                    text_color: "#4a4939"
                    spacing: "4dp"
                    padding: "12dp", 0, 0, "56dp"

                DrawerClickableItem:
                    icon: "github"
                    text: "GitHub"

                DrawerClickableItem:
                    icon: "brush"
                    text: "Поменять стиль"

                DrawerClickableItem:
                    icon: "cash"
                    text: "Спонсировать"

                DrawerClickableItem:
                    icon: "share-variant"
                    text: "Поделится"

                DrawerClickableItem:
                    icon: "account-edit"
                    text: "Написать разработчику"